        </th>
        <th>
            @Html.DisplayNameFor(model => model.LuotBinhLuan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoLanMua)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HangMoi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DongGiay.TenDongGiay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NhaCungCap.TenNCC)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayCapNhatGia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HinhAnh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LuotBinhChon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LuotBinhLuan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLanMua)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HangMoi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DongGiay.TenDongGiay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NhaCungCap.TenNCC)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaSP }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaSP }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaSP })
            </td>
        </tr>
    }

</table>
