@using DoAnCSDL_WebBanGiay.Models
@model IEnumerable<DoAnCSDL_WebBanGiay.Models.ChiTietDonDatHang>
@{
    ViewBag.Title = "ChiTiet";
    Layout = "~/Views/Layout/HomeLayout.cshtml";
}
<h2>Chi tiết hóa đơn</h2>

<table class="table">
    <tr>
        <th>STT</th>
        <th>Tên sản phẩm</th>
        <th>Số lượng</th>
        <th>Size</th>
        <th>Thành tiền</th>
        <th>Tổng tiền</th>
    </tr>
    @{
        double tongTien = 0;
        int i = 0;
        int thanhTien;
    }
    @foreach (var item in Model)
    {
        i++;
        thanhTien = (int)item.DonGia * (int)item.SoLuong;
        tongTien += thanhTien;
        <tr>
            <td>
                @i
            </td>
            <td>
                @item.SanPham.TenSP
            </td>
            <td>
                @item.SoLuong
            </td>
            <td>
                @item.Size
            </td>
            <td>
                @item.DonGia
            </td>
            <td>
                @thanhTien
            </td>
        </tr>
    }
    <tr>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th>@tongTien</th>
    </tr>
</table>


